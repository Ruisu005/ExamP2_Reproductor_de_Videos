<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/textViewWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <LinearLayout
        android:id="@+id/layoutCaricaturas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonCaricaturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_caricaturas"
            android:onClick="onCategoryClicked"
            android:tag="Caricaturas"
            android:contentDescription="Caricaturas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caricaturas"
            android:textSize="18sp"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonAccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_accion"
            android:onClick="onCategoryClicked"
            android:tag="Acción"
            android:contentDescription="Acción" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acción"
            android:textSize="18sp"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTerror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonTerror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_terror"
            android:onClick="onCategoryClicked"
            android:tag="Terror"
            android:contentDescription="Terror" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terror"
            android:textSize="18sp"
            android:padding="8dp" />
    </LinearLayout>

</LinearLayout>